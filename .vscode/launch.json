  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Graphql API",
      "port": 7777,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/graphql-api"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Frontend & Backend Debug",
      "configurations": [
        "Chrome",
        "Graphql API"
      ]
    }
  ]
}
